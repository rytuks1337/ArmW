<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArmWrestlingTournamentManagementSystem"
        tools:targetApi="31">
        <activity
            android:name=".ui.tournaments.RegisterTournament"
            android:exported="false" />
        <activity
            android:name=".ui.tournaments.RegisterPogrupis"
            android:exported="false" />
        <activity
            android:name=".tournament.tournament_details_view"
            android:exported="false" />
        <activity
            android:name=".tournament_details"
            android:exported="false"
            android:label="@string/title_activity_tournament_details"
            android:theme="@style/Theme.ArmWrestlingTournamentManagementSystem" />
        <activity
            android:name=".auth.LoginScreen"
            android:exported="false" />
        <activity
            android:name=".auth.RegisterScreen"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>