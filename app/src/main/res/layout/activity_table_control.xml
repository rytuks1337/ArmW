<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasirinkite nugalėtoją"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/player1_radio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P1"
            android:layout_marginEnd="8dp"/>

        <RadioButton
            android:id="@+id/player2_radio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P2"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/winner_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pasirinkti nugalėtoją"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pražangos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/foul_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/foul_types"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/foul_player1_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prasiženge Pirmasis dalyvis"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/foul_player2_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prasiženge Antrasis dalyvis"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pražanos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pirmojo žaidėjo pražangos: "
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/player1_foul1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_foul"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/player1_foul2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_foul"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Antrojo žaidėjo pražangos: "
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/player2_foul1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_foul"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/player2_foul2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_foul"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
